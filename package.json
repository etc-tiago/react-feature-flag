{
  "name": "react-single-feature-flag",
  "version": "1.0.0",
  "description": "A client-based feature flag library for React - with cookies",
  "author": "Tiago de Souza Santos",
  "main": "dist/index.es.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "vite --config vite.config.ts --port 3000",
    "build": "vite build --config vite.config.ts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest run",
    "test:ci": "vitest run --coverage --reporter=verbose --reporter=json --outputFile=test-results.json --coverage.reportOnFailure --coverage.reportsDirectory=coverage --bail=1"
  },
  "keywords": [
    "feature flag",
    "feature toggle",
    "feature flag library",
    "feature flag library for react",
    "feature flag library for react-web"
  ],
  "license": "MIT",
  "packageManager": "pnpm@10.15.0",
  "peerDependencies": {
    "react": "^19",
    "react-dom": "^19",
    "cookie": "^1.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.2",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.8",
    "@vitejs/plugin-react": "^5.0.1",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "jsdom": "^25.0.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.3",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^2.1.8"
  }
}